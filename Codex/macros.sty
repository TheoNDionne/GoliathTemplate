% My beloved TeX-JAM macros (ty JL <3)

% Better epsilon -----------------------
\let\oldepsilon\epsilon
\let\epsilon\varepsilon
\let\varepsilon\oldepsilon

% Better \bar -----------------------
\renewcommand{\bar}[1]{\mkern 1.5mu\overline{\mkern-1.5mu#1\mkern-1.5mu}\mkern 1.5mu}

% Équations -----------------------
\newcommand{\al}[1]{\begin{align} #1 \end{align}} % Numbered equation(s),
\newcommand{\eqn}[1]{\begin{align*} #1 \end{align*}} % Number-less equation(s),
\newcommand{\sys}[1]{\begin{dcases*} #1 \end{dcases*}} % System of equations.

% Exponents -----------------------
\newcommand{\Exp}[1]{\symup{e}^{#1}}		% e^#
\newcommand{\E}[1]{\times 10^{#1}}		% X 10^#

% Delimiters -----------------------
\newcommand{\p}[1]{\left( #1 \right)}	% (#)
\newcommand{\cro}[1]{\left[ #1 \right]}	% [#]
\newcommand{\abs}[1]{\left| #1\right|}	% |#|
\newcommand{\avg}[1]{\left\langle #1 \right\rangle} % <#>
\newcommand{\acc}[1]{\left\lbrace #1 \right\rbrace} % {#}

% Vectors -----------------------
\newcommand{\ve}[1]{\symbf{#1}} % Upright bold face.
\newcommand{\vu}[1]{\hat{\ve{#1}}} % Hat vector upright bold face
\newcommand{\tens}{\otimes} % Tensor product
\newcommand{\nablav}{\bm{\nabla}} % Bold gradient


% Trig. functions with automatic formating  -----------------------
\newcommandx{\Sin}[2][1={}]{\symup{sin}^{#1}\!\p{#2}}
\newcommandx{\Cos}[2][1={}]{\symup{cos}^{#1}\!\p{#2}}
\newcommandx{\Tan}[2][1={}]{\symup{tan}^{#1}\!\p{#2}}
\newcommandx{\Csc}[2][1={}]{\symup{csc}^{#1}\!\p{#2}}
\newcommandx{\Sec}[2][1={}]{\symup{sec}^{#1}\!\p{#2}}
\newcommandx{\Cot}[2][1={}]{\symup{cot}^{#1}\!\p{#2}}
\newcommandx{\Arcsin}[2][1={}]{\symup{arcsin}^{#1}\!\p{#2}}
\newcommandx{\Arccos}[2][1={}]{\symup{arccos}^{#1}\!\p{#2}}
\newcommandx{\Arctan}[2][1={}]{\symup{arctan}^{#1}\!\p{#2}}
\newcommandx{\Sinh}[2][1={}]{\symup{sinh}^{#1}\!\p{#2}}
\newcommandx{\Cosh}[2][1={}]{\symup{cosh}^{#1}\!\p{#2}}
\newcommandx{\Tanh}[2][1={}]{\symup{tanh}^{#1}\!\p{#2}}


% Matrices -----------------------
\newcommand{\mat}[1]{\begin{bmatrix} #1 \end{bmatrix}} % Matrices with hooks.
\newcommand{\pmat}[1]{\begin{pmatrix} #1 \end{pmatrix}} % Matrices with parentheses.
\newcommand{\deter}[1]{\abs{\begin{matrix} #1 \end{matrix}}} % Determinant.
\newcommand{\Det}[1]{\symup{det}\p{#1}} % det(#)
\newcommand{\Tr}[1]{\symup{Tr}\p{#1}} % Tr(#)
\newcommand{\ma}[1]{\symup{#1}} % upright matrix


% Derivatives -----------------------
\newcommand{\D}{\symup{d}} % Differential 'd'.
\newcommandx{\dd}[3][1={},3={}]{\frac{\D^{#3}\! #1}{\D #2^{#3}}} % Total derivative according to #2, #1 is the function and #3 is the order.
\newcommand{\del}{\partial} % Partial 'd'.
\newcommandx{\ddp}[3][1={},3={}]{\frac{\del^{#3}\! #1}{\del #2^{#3}}} % Dérivée partielle selon #2, #1 est la fonction est #3 est l'ordre.
\newcommandx{\ddf}[3][1={},3={}]{\frac{\delta^{#3}\! #1}{\delta #2^{#3}}} % Dérivée partielle selon #2, #1 est la fonction est #3 est l'ordre.
\newcommand{\eval}[1]{\left. {#1} \right|} % Bar on the right of expression.
\newcommand{\delbar}{\slashed{\del}} % Partial Inexact differential.
\newcommand{\dbar}{\dj}% Inexact differential.


% Integrals -----------------------
\newcommand{\intinf}{\int\displaylimits_{-\infty}^{\infty}} % From -00 to 00.
\newcommandx{\Int}[2][1={},2={}]{\int\displaylimits_{#1}^{#2}} % Faster bounded integrals.

% Complex numbers -----------------------
\renewcommand{\Re}[1]{\symup{Re}\acc{#1}} % Re{#}
\renewcommand{\Im}[1]{\symup{Im}\acc{#1}} % Im{#}


% Constants and physical symbols -----------------------
\newcommand{\kb}{k_\symup{B}} % Boltzmann's constant.
\let\oldAA\AA
\renewcommand{\r}{\symbf{r}} % Position vector.
\renewcommand{\k}{\symbf{k}} % Wave vector.
\newcommand{\q}{\symbf{q}} % Wave vector.

% Polarizing operator notation ----------------------
\newcommand{\op}[1]{\widehat{\symup{#1}}} % upright and hat on operators

% Commentaires et rédactions -----------------------
\newcommand{\red}[1]{{\color{red}#1}}
\newcommand{\comment}[1]{\marginpar{\parbox[b]{\marginparwidth}{\color{red}#1}}}
